include ../data

html
    head
        meta(charset='UTF-8')
        link(rel='stylesheet', href='css/main.styl')
    body
        include includes/dropdown-menu
        include includes/login-user
        include includes/pager
        include includes/todo-form
        include includes/todo-item
        include includes/todo-search-form
        header#l-header
            #l-header__left
            #l-header__right
                +loginUser
                +dropdownMenu
        #l-main.u-mt-20
            .c-row
                +todoForm(todo.fromUser)
            .c-horizontal-line.u-mt-20
            .c-row.u-mt-20
                +todoSearchForm(searchList.sort, searchList.from, searchList.to)
            .c-row.u-mt-20
                +todoItem(todo.text, todo.fromUser, todo.toUser)
            +pager([2,3,4,5,6])
