mixin todoItem(text, fromUser, toUser)
    .todo-item
        button.done-button
            span.c-todo-vertical-label
                | Done
        p.text #{text}
        .user-images
            +userImage(fromUser.name, fromUser.imagePath, 'From')
            +userImage(toUser.name, toUser.imagePath, 'To')

mixin userImage(userName, userImagePath, text)
    .user-image
        span.c-todo-vertical-label #{text}
        img(src=userImagePath, alt=userName)
