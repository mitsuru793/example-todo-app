mixin searchSelectItem(label, choices)
    .search-item
        span.label #{label}
        select(name='keyword')
            each choice in choices
                option(value=choice.value) #{choice.label}

html
    head
        meta(charset='UTF-8')
        link(rel='stylesheet', href='/css/main.styl')
    body
        include includes/todo-item.pug
        .container
            header
                .loginUser
                    .name
                        span #{loginUser.name}
                    img(src=loginUser.imagePath)
                    .menu
                        button.button ▼
                        ul.items
                            li.item
                                a logout
            .app.mt-20
                .todo-items
                    .todo-item.new-todo
                        button.add-button
                            span.p-todo-label.c-vertical-label Add
                        input(type='text')
                        .p-todo-assignee.from
                            span.p-todo-label.c-vertical-label To
                            img.c-user-image(src=todo.fromUser.imagePath, alt='')
                .line.mt-20
                .todo-items.search-box.mt-20
                    .search-item.keyword
                        span.label Search
                        input(type='text')
                    +searchSelectItem('Sort', searchList.keyword)
                    +searchSelectItem('Sort', searchList.from)
                    +searchSelectItem('Sort', searchList.to)
                .todo-items.mt-20
                    +todoItem(todo.text, todo.fromUser, todo.toUser)
                .pager.mt-20
                    .item.first ◀
                    .numbers
                        - const numbers = [2,3,4,5,6]
                        - const center = Math.round(numbers.length / 2) - 1
                        each n, i in numbers
                            if i === center
                                .item.number [#{n}]
                            else
                                .item.number #{n}
                    .item.last ▶


