body
  background-color #40A0FF

button
  margin 0
  padding 0

  font-size inherit
  border-width 0
  cursor pointer

input, select
  margin-top auto
  margin-bottom auto
  display block

select
  background transparent
  color #ffffff
  font-size 1.2em
  border none
  border-bottom 1px solid #ffffff

input[type=text]
  width 100%
  height 100%
  outline none
