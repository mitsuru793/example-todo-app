.search-box
  display: flex
  border: 1px solid #fff

.search-item
  display: flex
  flex-grow: 1
  justify-content: center
  padding: 5px 10px

.search-item.keyword
  flex-grow: 5

.search-item .label
  color: #fff
  font-size: 1.2em

.search-item input, select
  margin-left: 1em
  margin-top: auto
  margin-bottom: auto
  display: block

.search-item input[type=text]
  width: 100%
  height: 100%

