.search-box
  display flex
  border 1px solid #fff

.search-item
  display flex
  flex-grow 1
  justify-content center
  padding 5px 10px
  .keyword
    flex-grow 5
  .label
    color #fff
    font-size 1.2em
  input, select
    margin-left 1em
    margin-top auto
    margin-bottom auto
    display block
  select
    background transparent
    color #ffffff
    font-size 1.2em
    border none
    border-bottom 1px solid #ffffff
  input[type=text]
    width 100%
    height 100%
