.todo-items
  min-width 30em
  max-width 50em
  margin-left auto
  margin-right auto

.todo-item
  display flex
  height 4em
  border 1px solid #b9ebff
  .text
    width 100%
    padding 0.5em
    background-color #fff
  .item-label
    display block
    height 100%
    width 2em

    background-color #20CAFF
    color #eee
    font-weight bold
    writing-mode vertical-rl
    text-align center
    line-height 2em

.user-images
  display flex
  margin-left auto

.user-image
  display flex
  img
    display block
    height 100%
    width 50px
    object-fit cover
