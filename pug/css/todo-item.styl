.todo-item
  display: flex
  height: 4em
  border: 1px solid #b9ebff

.todo-items
  min-width: 30em
  max-width: 50em
  margin-left: auto
  margin-right: auto

.item-label
  display: block
  height: 100%
  padding: 0 0.3em

  background-color: #20CAFF
  color: #eee
  font-weight: bold
  writing-mode: vertical-rl
  text-align: center

.todo-item .text
  padding: 0.5em
  background-color: #fff

/**
 * ユーザー画像
 */
.user-images
  display: flex
  margin-left: auto

.user-image
  display: flex

.user-image img
  display: block
  height: 100%
  width: 100px
